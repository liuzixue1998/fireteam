script(type='text/javascript').
            $(document).ready(function () {
                $('.b2').click(function () {
                    if ($('#a1').val() == '') {
                        alert('请输入姓名！')}
                    else {
                        if (confirm('确认将信息保存到数据库？')) {
                            $.ajax({
                                url: '../admin/adminpost',
                                data: {
                                    name: $('#a1').val(),
                                    sex: $('#a2').val(),
                                    depart: $('#a3').val(),
                                    s1: $('#a4').val(),
                                    s2: $('#a5').val(),
                                    s3: $('#a6').val(),
                                    s4: $('#a7').val(),
                                    s5: $('#a8').val()
                                },
                                type: 'POST',
                                timeout: 36000,
                                dataType: 'text',
                                success: function (data, textStatus) {
                                }
                            });
                        window.location.href = 'admin';
                            }
                    }
                });

                $('.c2').click(function () {
                    if(confirm('确认隐藏该专家信息?')){
